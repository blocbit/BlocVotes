{% extends 'templates/app.twig' %}

{% block content %}
    <input type="hidden" class="bitcoin-address" value="{{ data.bitcoin_address }}">
    <div class="row">
    	<div class="col-md-12">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h3 class="panel-title">Overview</h3>
                    <p class="panel-subtitle">Welcome back, {{ data.username }} </p>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="metric">
                                <span class="icon"><i class="fa fa-btc"></i></span>
                                <p>
                                    <span class="number number-btc">Loading...</span>
                                    <span class="title">Balance</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="metric">
                                <span class="icon"><i class="fa fa-globe"></i></span>
                                <p>
                                    <span class="number number-network">Loading..</span>
                                    <span class="title">Network</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="metric">
                                <span class="icon"><i class="fa fa-bar-chart"></i></span>
                                <p>
                                    <span class="number">{{ data.items }}</span>
                                    <span class="title">Total Blocs</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="metric">
                                <span class="icon"><i class="fa fa-bar-chart"></i></span>
                                <p>
                                    <span class="number">{{ data.voters }}</span>
                                    <span class="title">Total Votes</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    {% for item in vote %}
                    <div class="row">
                        <div class="col-md-9">
                            <div class="profile-header">
                                <div class="overlay"></div>
                                <div class="profile-main" style='background-image: url("../../assets/img/world.jpg");height:220px'>
                                    <h3 class="name">{{ item.title }}</h3>
                                    {% if item.is_started=='0'  %}
                                        <span class="offline-status status-available">inactive</span>
                                    {% else %}
                                        <span class="online-status status-available">active</span>
                                    {% endif %}
                                </div>
                                <div class="profile-stat">
                                    <div class="row">
                                        <div class="col-md-4 stat-item">
                                            {% if item.is_started=='0'  %}
                                                <span> <a class="btn-toggle" data-id="{{ item.id }}" >Start</a></span>
                                            {% else %}
                                                <span><a class="btn-toggle" data-id="{{ item.id }}" >Stop</a></span>
                                            {% endif %}
                                        </div>
                                        <div class="col-md-4 stat-item"><a href ="https://localhost/ea/vote">
                                            <span>Manage</span></a>
                                        </div>
                                        <div class="col-md-4 stat-item"><a href ="https://localhost/tally/home">
                                            <span>Tally</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="weekly-summary text-right">
                                <span class="number">20</span>
                                <span class="info-label">Registered Citizens</span>
                            </div>
                            <div class="weekly-summary text-right">
                                <span class="number">10</span>
                                <span class="info-label">Bitcoin Address Numbers</span>
                            </div>
                            <div class="weekly-summary text-right">
                                <span class="number">8</span>
                                <span class="info-label">Active Citizens</span>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    No data
                </div>
                {% endfor %}

                </div>
            </div>
    	</div>
    </div>

{% endblock %}