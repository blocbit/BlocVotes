{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">

		<div class="col-md-4">
			<div class="panel panel-headline">
				<div class="panel-heading">Create Concept</div>
				<div class="panel-body">
                    <div class="form-group">
                        {#<label for="title">Voter</label>#}
                        <img src="/assets/img/avatar.png" width="256">

                    </div>
                    {#<div class="button-right">#}
                        {#<button type="button"  class="btn btn-info btn-upload">Upload</button>#}
                    {#</div>#}
				</div>
				
				<div class="panel-body">
                    <div class="form-group">
                        <label for="ogit">Zeronet address</label>
							<input type="text" name="ogit" id="ogit" class="form-control" >
                            {% if errors.link %}
                            <span class="hel-block">{{ errors.link | first }}</span>
                            {% endif %}
                    </div>
				</div>

			</div>
		</div>


		<div class="col-md-8">
    		<div class="panel panel-headline">
				<div class="panel-heading">
					<h3 class="panel-title">Concept Title</h3>
				</div>
    			<div class="panel-body">
									<div class="form-group">
										<label for="title">Concept Title</label>
										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-star"></i></span>
											<input class="form-control input-name" placeholder="Super Saiyan" name="firstname" type="text">
										</div>
									</div>

								<div class="form-group">
									<label for="description">Description</label>
										<textarea class="form-control input-des" placeholder="XP, Character and Skills" rows="10"></textarea>
								</div>
								
								<div class="form-group">
									<label for="vid_url">video url</label>
										<textarea class="form-control input-vurl" placeholder="Movie Time" rows="1"></textarea>
								</div>
					<div class="form-group">
						<label for="vote_id">Concept bloc</label>
						<select class="form-control vote-id" name="vote_id" id="vote_id">
                            {% for item in data %}
								<option value="{{ item.id }}">{{ item.title }}</option>
                            {% else %}
								<option>Please add a bloc first</option>
                            {% endfor %}
						</select>
					</div>
					<div class="button-right">
						<button type="button"  class="btn btn-success btn-add-candidate">Add</button>
					</div>

					</div>

    			</div>
    		</div>

    	</div>
    </div>
{% endblock %}